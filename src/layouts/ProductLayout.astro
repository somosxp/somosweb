---
import "@fontsource/space-grotesk";
import Header from "../components/Header.astro";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import PageSeo from "@components/PageSeo.astro";
import ProgressBar from "@components/ProgressBar.astro";

import { defaultLanguage } from "../i18n/ui";
import MainBody from "@components/MainBody.astro";
import IconClose from "@components/icons/IconClose.astro";
import PrimaryButton from "@components/PrimaryButton.astro";
const lang = Astro.currentLocale ?? defaultLanguage;

const { title } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <PageSeo title={title} />
    <ClientRouter />
  </head>
  <body class="flex min-h-full flex-col product-layout">
    <ProgressBar />
    <Header />
    <div
      class="absolute top-6 right-6 scale-125 hover:scale-150 transition-all z-[100001]"
    >
      <PrimaryButton href="/projects" rounded={true}>
        <IconClose />
      </PrimaryButton>
    </div>
    <MainBody>
      <slot />
    </MainBody>
  </body>
</html>
<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--body-bg);
    color: var(--text-color);
  }
</style>
