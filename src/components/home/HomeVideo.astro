---
import PlayIcon from "../icons/PlayIcon.astro";
import LiteYouTubeEmbed from "react-lite-youtube-embed";
import "react-lite-youtube-embed/dist/LiteYouTubeEmbed.css";
---

<section class="lg:py-20 py-10 px-4 bg-[#121212] relative group">
  <img
    src="/images/video-poster.jpeg"
    class="w-full h-full object-cover rounded-4xl group-hover:opacity-75 transition-all ease-out duration-300 hidden"
  />
  <LiteYouTubeEmbed
    id="SXdgE2UMlWc"
    title="SOMOS Experiences | Inspire to transform"
    wrapperClass="rounded-4xl overflow-hidden yt-lite"
    playerClass="player hidden absolute left-1/2 lg:left-1/4 top-1/2 -translate-1/2 lg:opacity-0 group-hover:opacity-100 transition-all ease-out duration-300 cursor-pointer hover:scale-150 bg-white rounded-full h-24 w-24 flex items-center justify-center hover:bg-primary"
  />

  <button
    type="button"
    class="absolute left-1/2 lg:left-1/4 top-1/2 -translate-1/2 lg:opacity-0 group-hover:opacity-100 transition-all ease-out duration-300 cursor-pointer hover:scale-150 bg-white rounded-full h-24 w-24 flex items-center justify-center hover:bg-primary"
  >
    <PlayIcon />
  </button>
</section>
<style>
  .player::before {
    content: "\A";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 0px;
    height: 0px;
    border-style: solid;
    border-width: 75px 0 75px 129.9px;
    border-color: transparent transparent transparent #ff4532;
    transform: rotate(0deg);
  }
</style>
