---
const { title, subtitle, description } = Astro.props;
---

<section class="my-6 md:my-12 flex flex-col gap-y-4 gap-x-10 lg:flex-row">
  <div class="flex md:justify-center lg:pl-24">
    <p class="font-semibold text-4xl md:text-5xl">{title}</p>
  </div>
  <div class="md:w-3/5">
    <p class="opacity-40">{subtitle}</p>
    <p class="text-base md:text-lg mt-4">{description}</p>
  </div>
</section>
